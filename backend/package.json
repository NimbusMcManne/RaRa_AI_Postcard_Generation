{
    "name": "backend",
    "version": "1.0.0",
    "main": "index.js",
    "directories": {
        "lib": "lib",
        "test": "test"
    },
    "scripts": {
        "start": "node dist/index.js",
        "build": "tsc",
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write 'src/**/*.ts'",
        "docker:build": "docker build -t postcard-backend .",
        "docker:dev": "docker-compose up",
        "docker:dev:build": "docker-compose up --build",
        "docker:stop": "docker-compose down",
        "fetch:initial": "ts-node src/scripts/fetch-initial.ts",
        "fetch:initial:debug": "ts-node src/scripts/fetch-initial.ts --debug",
        "test:period-mapping": "ts-node src/scripts/test-period-mapping.ts"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "dependencies": {
        "axios": "^1.7.9",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "xml2js": "^0.6.2",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.13.4",
        "@types/xml2js": "^0.4.14",
        "eslint": "^9.19.0",
        "jest": "^29.7.0",
        "nodemon": "^3.1.9",
        "prettier": "^3.4.2",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.7.3"
    }
}
